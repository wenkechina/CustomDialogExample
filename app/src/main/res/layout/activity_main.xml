<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/sex1"
              android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/fadein"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Fade In"
                />

            <Button
                android:id="@+id/slideright"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Slide Right"
                />

            <Button
                android:id="@+id/slideleft"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Slide Left"
                />

            <Button
                android:id="@+id/slidetop"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Slide Top"
                />

            <Button
                android:id="@+id/slideBottom"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Slide Bottom"
                />

            <Button
                android:id="@+id/newspager"
                style="@style/my_btn"
                android:gravity="center"
                android:text="News Paper"
                />

            <Button
                android:id="@+id/fall"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Fall"
                />

            <Button
                android:id="@+id/sidefall"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Side Fall"
                />

            <Button
                android:id="@+id/shake"
                style="@style/my_btn"
                android:gravity="center"
                android:text="Shake"
                />

            <Button
                android:id="@+id/fliph"
                style="@style/my_btn"
                android:gravity="center"
                android:text="3D Flip (horizontal)"
                />

            <Button
                android:id="@+id/flipv"
                style="@style/my_btn"
                android:gravity="center"
                android:text="3D Flip (vertical)"
                />

            <Button
                android:id="@+id/rotatebottom"
                style="@style/my_btn"
                android:gravity="center"
                android:text="3D Rotate Bottom"
                />

            <Button
                android:id="@+id/rotateleft"
                style="@style/my_btn"
                android:gravity="center"
                android:text="3D Rotate Left"
                />

            <Button
                android:id="@+id/slit"
                style="@style/my_btn"
                android:gravity="center"
                android:text="3D Slit"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
